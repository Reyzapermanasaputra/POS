<h1>Listing Activities</h1>
<table class="table table-stripped table-bordered table-condensed sortable">
  <thead>
    <tr>
      <th><%= "Activities" %></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
    <tr>
      <td valign="top">
        <%= activity.owner.email %>
        <%= render_activity activity %>
        <%= activity.created_at.to_date %>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3"></td>
    </tr>
  </tfoot>
</table>